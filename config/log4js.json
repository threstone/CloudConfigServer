{
    "appenders": {
        "console": {
            "type": "console",
            "category": "console",
            "layout": {
                "type": "pattern",
                "pattern": "%f:%l:%o [%d] [%p] [%c] %m"
            }
        },
        "debug": {
            "type": "dateFile",
            "filename": "./logs/log",
            "alwaysIncludePattern": true,
            "pattern": "log",
            "maxLogSize": 104857600,
            "layout": {
                "type": "pattern",
                "pattern": "%f:%l:%o [%d] [%p] [%c] %m"
            }
        }
    },
    "replaceConsole": true,
    "categories": {
        "default": {
            "appenders": [
                "console",
                "debug"
            ],
            "level": "ALL",
            "enableCallStack": true
        }
    }
}